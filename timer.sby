cat <<EOF > timer.sby
[tasks]
bmc
prove

[options]
bmc: mode bmc
bmc: depth 20
prove: mode prove

[engines]
smtbmc

[script]
# --- KRITIK SATIR: GHDL eklentisini Yosys'e yukle ---
plugin -i ghdl

# Simdi GHDL komutu calisacaktir
ghdl --std=08 src/timer.vhd -e timer

# Formal Verification ayarlari
prep -top timer -chparam clk_freq_hz_g 1000 -chparam delay_g 5000000000000

[files]
src/timer.vhd
EOF
